<h1>{{title}}</h1>

{{#if user}}
  <a href="/projects/add">Add a new Project</a>
{{/if}}
{{! To Show data }}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Due Date</th>
    <th>Course</th>
    <th>Status</th>
    <th>Actions</th>
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{toShortDate this.dueDate}}</td>
        <td>{{this.course}}</td>
        <td>{{this.status}}</td>
        {{!-- Protecting by Hiding --}}
        {{#if ../user}}
        <td>
          <a href="/projects/edit/{{this._id}}" class="btn btn-info">Edit</a>
          <a
            href="/projects/delete/{{this._id}}"
            onclick="return confirmDeletion()"
            class="btn btn-danger"
          >Delete</a>
        </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>