<h1>{{title}}</h1>
{{!-- CRUD Functionality --}}
{{!-- CREATE button --}}
{{#if user}}
    <a href="/projects/add" class="btn btn-info">Add a new project</a>
{{/if}}
{{!-- READ Show Table to view all projects in db --}}
<table class="table table-striped table-bordered table-hover">
    <thead>
        <th>Name</th>
        <th>Due Date</th>
        <th>Course</th>
        <th>Status</th>
        <th></th>
    </thead>
    <tbody>
        {{!-- Retrieve all projects and loop --}}
        {{#each dataset}}
        <tr>
            <td>{{this.name}}</td>
            {{!-- Use the hbs helper function to format the date accordingly --}}
            <td>{{toShortDate this.dueDate}}</td>
            <td>{{this.course}}</td>
            <td>{{this.status}}</td>
            {{!-- UPDATE and DELETE buttons --}}
            <td>
                {{#if ../user}}
                    <a href="/projects/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a
                        href="/projects/delete/{{this._id}}"
                        onclick="return confirmDeletion()"
                        class="btn btn-danger"
                    >Delete</a>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
