<h1>
  {{title}}
</h1>
{{! Only show CRUD buttons if there's a session (authenticated user) }}
{{#if user}}
  {{! Add links to CRUD operations }}
  <a href="/projects/add">Add a new project</a>
{{/if}}

{{! To Show data }}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Due Date</th>
    <th>Course</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.dueDate}}</td>
        <td>{{this.course}}</td>
        <td>{{this.status}}</td>
        <td>
          {{! Only show CRUD buttons if there's a session (authenticated user) }}
          {{!-- use ../ to navigate out of the for loop into the global scope --}}
          {{#if ../user}}
          <a
            href="/projects/edit/{{this._id}}"
            class="btn btn-primary"
          >Edit</a>
          <a
            href="/projects/delete/{{this._id}}"
            class="btn btn-danger"
            onclick="return confirmDeletion();"
          >Delete</a></td>
          {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>