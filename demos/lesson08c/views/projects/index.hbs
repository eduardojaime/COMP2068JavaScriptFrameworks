{{!-- CRUD Operations on Projects --}}
<h1>Projects</h1>
{{!-- CREATE button --}}
{{#if user}}
  <a href="/projects/add" class="btn btn-primary">Add a new Project</a>
{{/if}}
{{!-- READ show a table with all the data --}}
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Course</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{!-- use foreach to iterate through a list that will come from the router --}}
    {{#each dataset}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{toShortDate this.dueDate}}</td>
        <td>{{this.course}}</td>
        <td>{{this.status}}</td>
        <td>
          {{#if ../user}}
            <a href="/projects/edit/{{this._id}}" class="btn btn-info">Update</a>
            &nbsp;
            <a href="/projects/delete/{{this._id}}" 
                class="btn btn-danger"
                onclick="return ConfirmDeletion()">Delete</a>
          {{/if}}
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>