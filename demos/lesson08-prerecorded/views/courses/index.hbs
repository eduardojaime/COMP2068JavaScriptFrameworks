<h1>
  {{title}}
</h1>
{{!-- Add links to CRUD operations --}}
{{#if user}}
  <a href="/courses/add">Add a new Course</a>
{{/if}}

{{!-- To Show data --}}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Code</th>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.code}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>